---
import Base from '../../layouts/Base.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
---

<Base title="Projects | sibukixxx" description="これまでに作成したプロジェクトの一覧">
  <Header />

  <main class="py-12">
    <div class="mx-auto max-w-5xl px-4">
      <header class="mb-12 text-center">
        <h1 class="mb-4 text-4xl font-bold tracking-tight text-gray-900 dark:text-gray-100">
          Projects
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          個人プロジェクトやオープンソースへの貢献
        </p>
      </header>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {allProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            url={project.data.url}
            github={project.data.github}
            tech={project.data.tech}
          />
        ))}
      </div>

      {allProjects.length === 0 && (
        <div class="rounded-xl border border-gray-200 bg-white p-12 text-center dark:border-gray-700 dark:bg-gray-800">
          <p class="text-gray-500 dark:text-gray-400">
            まだプロジェクトがありません。
          </p>
        </div>
      )}
    </div>
  </main>

  <Footer />
</Base>
