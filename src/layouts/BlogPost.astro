---
import Base from './Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags?: string[];
  headings?: Heading[];
}

const { title, description, pubDate, tags = [], headings = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={`${title} | sibukixxx`} description={description}>
  <Header />
  <main class="mx-auto max-w-3xl px-4 py-12">
    <article>
      <header class="mb-8">
        <h1 class="mb-4 text-4xl font-bold tracking-tight">{title}</h1>
        <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400">
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
          {tags.length > 0 && (
            <div class="flex gap-2">
              {tags.map((tag) => (
                <span class="rounded-full bg-primary-100 px-3 py-1 text-sm text-primary-700 dark:bg-primary-900 dark:text-primary-300">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
      </header>
      <TableOfContents headings={headings} />
      <div class="prose prose-lg prose-gray dark:prose-invert">
        <slot />
      </div>
    </article>
  </main>
  <Footer />
</Base>
